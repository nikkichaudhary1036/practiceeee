import React, { useState } from "react";
import {
  View,
  Text,
  TextInput,
  TouchableOpacity,
  StyleSheet,
  ScrollView,
  Alert,
} from "react-native";

export default function App() {
  const [screen, setScreen] = useState("login");

  // LOGIN SCREEN
  if (screen === "login") {
    return (
      <View style={styles.container}>
        <Text style={styles.title}>Rural Help App</Text>

        <TextInput
          placeholder="Enter Name"
          style={styles.input}
        />

        <TextInput
          placeholder="Enter Mobile Number"
          keyboardType="numeric"
          style={styles.input}
        />

        <TouchableOpacity
          style={styles.button}
          onPress={() => setScreen("dashboard")}
        >
          <Text style={styles.btnText}>Login</Text>
        </TouchableOpacity>
      </View>
    );
  }

  // DASHBOARD
  if (screen === "dashboard") {
    return (
      <View style={styles.container}>
        <Text style={styles.title}>Dashboard</Text>

        <TouchableOpacity
          style={styles.button}
          onPress={() => setScreen("schemes")}
        >
          <Text style={styles.btnText}>Check Government Schemes</Text>
        </TouchableOpacity>

        <TouchableOpacity
          style={styles.button}
          onPress={() => setScreen("complaint")}
        >
          <Text style={styles.btnText}>Report Complaint</Text>
        </TouchableOpacity>
      </View>
    );
  }

  // SCHEMES SCREEN
  if (screen === "schemes") {
    return (
      <ScrollView contentContainerStyle={styles.container}>
        <Text style={styles.title}>Government Schemes</Text>

        <View style={styles.card}>
          <Text style={styles.scheme}>PM Awas Yojana</Text>
          <Text>For low income families</Text>
        </View>

        <View style={styles.card}>
          <Text style={styles.scheme}>Ujjwala Yojana</Text>
          <Text>Free gas connection for women</Text>
        </View>

        <View style={styles.card}>
          <Text style={styles.scheme}>PM Kisan Yojana</Text>
          <Text>Financial support to farmers</Text>
        </View>

        <TouchableOpacity
          style={styles.button}
          onPress={() => setScreen("dashboard")}
        >
          <Text style={styles.btnText}>Back</Text>
        </TouchableOpacity>
      </ScrollView>
    );
  }

  // COMPLAINT SCREEN
  if (screen === "complaint") {
    return (
      <View style={styles.container}>
        <Text style={styles.title}>Register Complaint</Text>

        <TextInput
          placeholder="Issue Type (Water / Electricity)"
          style={styles.input}
        />

        <TextInput
          placeholder="Describe your problem"
          style={[styles.input, { height: 80 }]}
          multiline
        />

        <TouchableOpacity
          style={styles.button}
          onPress={() =>
            Alert.alert("Success", "Complaint Submitted Successfully")
          }
        >
          <Text style={styles.btnText}>Submit</Text>
        </TouchableOpacity>

        <TouchableOpacity
          style={styles.button}
          onPress={() => setScreen("dashboard")}
        >
          <Text style={styles.btnText}>Back</Text>
        </TouchableOpacity>
      </View>
    );
  }

  return null;
}

// STYLES
const styles = StyleSheet.create({
  container: {
    flex: 1,
    padding: 20,
    justifyContent: "center",
  },
  title: {
    fontSize: 24,
    fontWeight: "bold",
    marginBottom: 20,
    textAlign: "center",
  },
  input: {
    borderWidth: 1,
    borderColor: "#999",
    padding: 10,
    marginBottom: 15,
    borderRadius: 5,
  },
  button: {
    backgroundColor: "#2e86de",
    padding: 12,
    marginVertical: 8,
    borderRadius: 5,
  },
  btnText: {
    color: "#fff",
    textAlign: "center",
    fontWeight: "bold",
  },
  card: {
    borderWidth: 1,
    borderColor: "#ccc",
    padding: 10,
    marginBottom: 10,
    borderRadius: 5,
    width: "100%",
  },
  scheme: {
    fontWeight: "bold",
    marginBottom: 4,
  },
});


